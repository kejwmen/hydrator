{
    "name": "kejwmen/hydrator",
    "license": "MIT",
    "type": "library",
    "description": "Simple array hydrator",
    "autoload": {
        "psr-4": {
            "kejwmen\\Hydrator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "kejwmen\\Hydrator\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "lstrojny/functional-php": "^1.7"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0",
        "mockery/mockery": "^0.9",
        "phpstan/phpstan": "^0.9",
        "phpunit/phpunit": "^7.1"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "scripts": {
        "phpstan": "bin/phpstan analyse --level=max src tests",
        "codestyle": "bin/phpcs --standard=Doctrine src tests",
        "codestyle-fix": "bin/phpcbf --standard=Doctrine src tests"
    }
}
